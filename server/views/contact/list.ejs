<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

        <main class="container">
            <div class="row">
                <div class="offset-md-1 col-md-10">
                    <h1><%= title %></h1>
                    <% if(typeof displayName == 'string' && displayName) { %>
                    <a href="/contact-list/add" class="btn btn-primary"role="button">
                    <i class="fas fa-plus-circle"></i> Add a Contact </a>
                    <%} %>
                    <br>
                    
                    <table class="table table-bordered">
                        <!--Header Row-->
                        <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Number</th>
                            <th scope="col">Email</th>
                             <% if(typeof displayName == 'string' && displayName) { %>
                                  <th scope="col"></th>
                                  <th scope="col"></th>
                            <%} %>
                        </tr>
                        <thead>
                        <!--Repeatable Template Row-->
                        <tbody>

                        <% for(let count = 0; count < ContactList.length; count++) { %>
                        <tr>
                            <td><%= ContactList[count].Name %></td>
                            <td><%= ContactList[count].Number %></td>
                            <td><%= ContactList[count].Email %></td>
                            <% if(typeof displayName == 'string' && displayName) { %>
                            <td>
                                <a href="/contact-list/update/<%= ContactList[count]._id %> " class="btn btn-primary">
                                <i class="fas fa-pencil-alt"></i>Update</a>
                            </td>
                        
                            <td>
                            <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>Delete</a>
                            </td>
                         <%} %>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
